# ========================================
# Polymarket Crypto Edge Research Config
# ========================================
# Copy to .env and fill in your API keys

# === XAI / Grok 4.1 ===
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-3-fast
XAI_BASE_URL=https://api.x.ai/v1

# === Polymarket ===
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_SECRET=your_polymarket_secret_here
POLYMARKET_PASSPHRASE=your_polymarket_passphrase_here
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_DATA_URL=https://data-api.polymarket.com

# === CEX (Binance) ===
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here
BINANCE_BASE_URL=https://api.binance.com
BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# === Storage ===
SQLITE_DB_PATH=./data/edge_research.db
PARQUET_DATA_DIR=./data/parquet

# === Trading Config ===
PAPER_TRADING=true
INITIAL_CAPITAL=10000.0
MAX_POSITION_SIZE_PCT=0.10
KELLY_FRACTION=0.25
MIN_EDGE_THRESHOLD=0.02
MAX_CONCURRENT_POSITIONS=10

# === ML Config ===
MODEL_DIR=./models
RETRAIN_HOUR_UTC=4
MIN_SHARPE_IMPROVEMENT=0.3
LOOKBACK_DAYS=60
DIRECTION_THRESHOLD_PCT=0.08

# === Grok Config ===
GROK_CALL_INTERVAL_MINUTES=15
GROK_MAX_INPUT_TOKENS=1200
GROK_CACHE_TTL_SECONDS=900

# === Risk Limits ===
MAX_DAILY_LOSS_PCT=0.05
MAX_DRAWDOWN_PCT=0.15
POSITION_CORRELATION_LIMIT=0.7

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=./logs/edge_research.log
