# API Keys
KALSHI_API_KEY=your_kalshi_key
KALSHI_API_SECRET=your_kalshi_secret
KALSHI_BASE_URL=https://trading-api.kalshi.com

POLYMARKET_API_KEY=your_polymarket_key
POLYMARKET_PRIVATE_KEY=your_eth_private_key
POLYMARKET_CLOB_URL=https://clob.polymarket.com

OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

ANTHROPIC_API_KEY=your_anthropic_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_BASE_URL=https://api.anthropic.com

XAI_API_KEY=your_xai_key
XAI_MODEL=grok-2-1212
XAI_BASE_URL=https://api.x.ai/v1

# Mode: research, paper, or live
TRADING_MODE=research

# Database
DATABASE_URL=sqlite+aiosqlite:///./prediction_oracle.db

# Risk Management
INITIAL_BANKROLL=1000.0
MAX_POSITION_SIZE_PCT=0.01
MAX_VENUE_EXPOSURE_PCT=0.20
MAX_DAILY_DRAWDOWN_PCT=0.05

# Scanning
SCAN_INTERVAL_SECONDS=300
MAX_CONCURRENT_LLM_CALLS=2

# Signal Sources (optional - GDELT is always free!)
ENABLE_NEWS_SIGNALS=true
ENABLE_SMART_MONEY_SIGNALS=true
ENABLE_SOCIAL_SIGNALS=true

# Free News APIs (optional but recommended)
NEWSAPI_KEY=
GNEWS_KEY=

# Signal Thresholds
SMART_MONEY_MIN_SIGNAL=0.2
NEWS_VELOCITY_SPIKE=2.0
ENABLE_QUICK_FILTER=true
QUICK_FILTER_TOP_N=20

# Enhanced Strategies (use signal-integrated strategies)
ENABLE_ENHANCED_STRATEGIES=true

# === Cost Optimization ===
LLM_DAILY_BUDGET=10.00
MAX_COST_PER_QUERY=0.50

# === Smart Screener ===
USE_SMART_SCREENER=true
SCREENER_MIN_VOLUME=100.0
SCREENER_TOP_N=20
